@model Asp.Models.producto

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label col-md-3" for="nombre">Nombre</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            <label class="control-label col-md-10" for="percio_unitario">Precio Unitario</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.percio_unitario)
        </dd>

        <dt>
            <label class="control-label col-md-3" for="descripcion">Descripción</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            <label class="control-label col-md-3" for="cantidad">Cantidad</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

        <dt>
            <label class="control-label col-md-9" for="id_proveedor">Id Proveedor</label>
        </dt>
        <dd>
            @Asp.Controllers.ProductoController.NombreProveedor(Model.id_proveedor)
        </dd>

        <dt>
            <label class="control-label col-md-3" for="producto_imagen">Imagen</label>
            
        </dt>
        
        <dd>
            <img class="img-responsive" src="@Url.Content("~/" + ViewBag.imagen)" width="400" height="500" />
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Regresar a Lista", "PagIndex")
</p>
