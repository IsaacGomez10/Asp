@model IEnumerable<Asp.Models.proveedor>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista Proveedor</h2>

<p>
    @Html.ActionLink("Crear Nuevo Proveedor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Dirección
        </th>
        <th>
            Teléfono
        </th>
        <th>
            Nombre Contacto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_contacto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
<div>@Html.ActionLink("Cargar Archivos","/uploadCSV")</div>
@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿desea eliminar?'))
                event.preventDefault();
        })
    </script>
}

