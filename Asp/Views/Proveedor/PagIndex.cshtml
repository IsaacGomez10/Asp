@model Asp.Models.IndexViewModel

@{
    ViewBag.Title = "Lista";
}

<h2>Lista Proveedor</h2>

<p>
    @Html.ActionLink("Crear Nuevo Proveedor", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Dirección
        </th>
        <th>
            Teléfono
        </th>
        <th>
            Nombre Contacto
        </th>
        <th></th>
    </tr>


    @foreach (var proveedor in Model.Proveedores)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelproveedor => proveedor.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelproveedor => proveedor.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelproveedor => proveedor.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelproveedor => proveedor.nombre_contacto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = proveedor.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = proveedor.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = proveedor.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }
</table>
<div>@Html.ActionLink("Cargar Archivos", "/uploadCSV")</div>

@{ Html.RenderPartial("Paginador", Model);}
@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿desea eliminar?'))
                event.preventDefault();
        })
    </script>
}
