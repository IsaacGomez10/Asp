
@{
    ViewBag.Title = "Subir CSV";
}

<h2>Subir CSV</h2>

@using (Html.BeginForm("uploadCSV", "Proveedor", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="form-group">
    <label class="control-label col-md-2">Subir CSV</label>
    <div class="col-md-10">
        <input type="file" name="fileForm" class="btn btn-default" required />
    </div>
</div>

<div class="form-group">
    <div class="col-md-10">
        <input class="btn btn-default" type="submit" value="Subir" />
    </div>
    <br /><br /><br />
</div>
<div>@Html.ActionLink("Regresar a Lista", "Index")</div>
}

