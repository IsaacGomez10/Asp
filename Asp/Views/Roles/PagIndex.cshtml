@model Asp.Models.IndexViewModel
@{
    ViewBag.Title = "Lista";
}

<h2>Lista Roles</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            <label class="control-label col-md-2" for="descripcion">Descripción</label>
        </th>
        <th></th>
    </tr>

    @foreach (var roles in Model.Roles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelroles => roles.descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = roles.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = roles.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = roles.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
<div>@Html.ActionLink("Cargar Archivos", "Cargar")</div>
@{ Html.RenderPartial("Paginador", Model);}
@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿desea eliminar?'))
                event.preventDefault();
        })
    </script>
}

